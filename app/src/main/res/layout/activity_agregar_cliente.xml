<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/listas">

    <TextView
        android:id="@+id/tvAgregarCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar Cliente"
        android:textSize="22sp"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:id="@+id/etNombreCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre"
        android:inputType="text"
        style="@style/input"/>

    <EditText
        android:id="@+id/etTelefonoCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="TelÃ©fono"
        android:inputType="phone"
        style="@style/input"/>

    <Button
        android:id="@+id/btnAgregarCliente"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Agregar Cliente"
        android:layout_marginTop="20dp"
        app:cornerRadius="20dp"
        android:background="@drawable/custom_botones"
        android:textColor="@color/white"/>
</LinearLayout>
