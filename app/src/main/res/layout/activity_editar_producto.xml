<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/listas">

    <TextView
        android:id="@+id/tvEditarProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar Producto"
        android:textSize="22sp"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:id="@+id/et_nombre_producto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del producto"
        android:inputType="text"
        style="@style/input"/>

    <EditText
        android:id="@+id/et_precio_producto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Precio del producto"
        android:inputType="numberDecimal"
        android:layout_marginTop="16dp"
        style="@style/input"/>

    <Button
        android:id="@+id/btn_guardar_producto"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        app:cornerRadius="20dp"
        android:background="@drawable/custom_botones"
        android:text="Guardar"
        android:textColor="@color/white"/>
</LinearLayout>
